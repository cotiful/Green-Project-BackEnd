{{> /layout/header}}

<!-- 컨테이너 시작 -->
<div class="container mt-3">

    <!-- 회원가입 폼 시작 -->
    <form action="/join" method="post">
        <div class="mb-3 mt-3">
            <input name="username" type="text" class="form-control" placeholder="Enter username" required maxlength="12">
        </div>
        <div class="mb-3 mt-3">
          <input name="nickname" type="text" class="form-control" placeholder="Enter nickname" required maxlength="12">
      </div>
        <div class="mb-3">
            <input name="password" type="password" class="form-control" placeholder="Enter password" required
                maxlength="12">
        </div>
        <div class="mb-3">
            <input name="email" type="email" class="form-control" placeholder="Enter email" required maxlength="30">
        </div>
        <button type="submit" class="btn btn-primary">회원가입</button>
    </form>
    <!-- 회원가입 폼 끝 -->

</div>


<!-- 컨테이너 끝 -->
{{> /layout/footer}}